{
	"name": "@harvest-forward/runtime",
	"version": "0.2.84",
	"description": "Harvest Forward Runtime",
	"author": "author@harvest-forward.dev",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/harvest-forward/runtime.git"
	},
	"bugs": {
		"url": "https://github.com/harvest-forward/runtime/issues"
	},
	"homepage": "https://github.com/harvest-forward/runtime#readme",
	"private": false,
	"license": "UNLICENSED",
	"main": "dist/src/index.js",
	"types": "dist/src/index.d.ts",
	"scripts": {
		"prepare": "tsc",
		"build": "tsc",
		"clean": "rimraf dist/",
		"copy-templates": "copyfiles -u 1 src/**/*.handlebars dist/src/",
		"lint": "eslint \"{src,test}/**/*.ts\" --fix",
		"format": "prettier --write \"src/**/*.ts\" ",
		"test": "jest --coverage"
	},
	"keywords": [
		"transformation",
		"cli",
		"framework",
		"automation",
		"continuous",
		"code-generation",
		"template-metaprogramming",
		"model-driven-development",
		"feature-extraction",
		"template-metaprogramming",
		"source-to-source"
	],
	"dependencies": {
		"@harvest-forward/sample-template": "^0.9.12",
		"await-semaphore": "^0.1.3",
		"change-case": "^4.1.2",
		"class-transformer": ">=0.3.1",
		"class-validator": "^0.13.1",
		"dotenv": "^10.0.0",
		"handlebars": "^4.7.7",
		"handlebars-helpers": "^0.9.8",
		"handlebars-utils": "^1.0.6",
		"mariadb": "^2.5.5",
		"pino": "^6.13.3",
		"pluralize": "^8.0.0",
		"shelljs": "^0.8.5",
		"typescript": "^4.5.4",
		"typescript-class-validator": "^0.0.6",
		"validator": ">=13.7.0"
	},
	"devDependencies": {
		"@harvest-forward/eslint-config": "^0.9.1",
		"@types/handlebars-helpers": "^0.5.3",
		"@types/jest": "^26.0.22",
		"@types/node": "^14.18.1",
		"@types/pino": "^6.3.12",
		"@types/pluralize": "^0.0.29",
		"@types/shelljs": "^0.8.10",
		"@typescript-eslint/parser": "^5.10.0",
		"copyfiles": "^2.4.1",
		"eslint": "^8.0.0",
		"jest": "^26.6.3",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.5.4",
		"ts-node": "^9.0.0",
		"ts-node-dev": "^1.1.6"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"coverageReporters": [
			"json",
			"json-summary",
			[
				"text",
				{
					"skipFull": true
				}
			]
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
